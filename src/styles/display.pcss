.display {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%) ;
    width: 50vh;
    height: 50vh;
    background-color: var(--colorBurningSand);
    border-radius: 50%;
    transition: all 0.8s ease-in-out;
}

.drop {
    transform: translate(-50%, -50%) rotate(45deg);
    border-radius: 0 50% 50% 50%;
    background-color: var(--colorPortage);
}