.panel {
    display: flex;
    flex-direction: row;
    gap: 75px;
    color: var(--colorMineShaft);
    
}

.panel__border {
    width: 120px;
    height: 45px;
    border: 3px solid var(--colorMineShaft);

    position: absolute;
    top: 50%;
    left: 17px;
    transition: transform 0.5s ease-in-out;
    transform: translateY(-50%);
}

.button__text:hover {
    color: var(--colorTuna);
    cursor: pointer;
}